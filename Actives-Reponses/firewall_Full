#!/bin/bash
set -euo pipefail

LOG_FILE="/var/log/wazuh/firewall_Full.log"
STATE_FILE="/var/ossec/active-response/bin/firewall_state.json"
WHITELIST="/var/ossec/active-response/bin/whitelist.txt"
TMP_STATE="$(mktemp)"
DATE_NOW=$(date '+%F %T')

ACTION=${1:-""}
INPUT_JSON=$(cat)  # Lecture robuste de stdin complet

# Debug : log brut JSON
echo "$DATE_NOW ðŸ” JSON brut reÃ§u: $INPUT_JSON" >> "$LOG_FILE"

# Extraction alerte
ALERT=$(echo "$INPUT_JSON" | jq -er '.parameters.alert // .alert')

# Extraction de lâ€™IP source
IP=$(echo "$ALERT" | jq -er '.data.srcip // .srcip')

# VÃ©rification IP valide (IPv4 uniquement ici)
if [[ ! "$IP" =~ ^([0-9]{1,3}\.){3}[0-9]{1,3}$ ]]; then
    echo "$DATE_NOW âŒ IP invalide ou non prÃ©sente : $IP" >> "$LOG_FILE"
    exit 1
fi

# Whitelist
if [ -f "$WHITELIST" ] && grep -qFx "$IP" "$WHITELIST"; then
    echo "$DATE_NOW ðŸ›¡ï¸ IP $IP dans whitelist, ignorÃ©e." >> "$LOG_FILE"
    exit 0
fi

# Init Ã©tat si inexistant
[ ! -f "$STATE_FILE" ] && echo '{}' > "$STATE_FILE"

# Lecture et incrÃ©ment du compteur
COUNT=$(jq -r --arg ip "$IP" '.[$ip].count // 0' "$STATE_FILE")
NEW_COUNT=$((COUNT + 1))

# DurÃ©e selon le palier
case $NEW_COUNT in
    1) DURATION=30 ;;       # 30s
    2) DURATION=300 ;;      # 5 min
    3) DURATION=3600 ;;     # 1h
    *) DURATION=0 ;;        # dÃ©finitif
esac

# Mise Ã  jour du fichier d'Ã©tat
jq --arg ip "$IP" --argjson count "$NEW_COUNT" \
   '.[$ip].count = $count | .[$ip].last_seen = (now | todate)' \
   "$STATE_FILE" > "$TMP_STATE"
mv "$TMP_STATE" "$STATE_FILE"

# Traitement selon action
case "$ACTION" in
  add)
    iptables -I INPUT -s "$IP" -j DROP
    if [ "$DURATION" -eq 0 ]; then
        echo "$DATE_NOW â›” IP $IP bloquÃ©e *dÃ©finitivement* (tentatives: $NEW_COUNT)." >> "$LOG_FILE"
    else
        echo "$DATE_NOW â›” IP $IP bloquÃ©e pour $DURATION sec (tentatives: $NEW_COUNT)." >> "$LOG_FILE"
        (
            sleep "$DURATION"
            iptables -D INPUT -s "$IP" -j DROP && \
            echo "$(date '+%F %T') âœ… IP $IP dÃ©bloquÃ©e aprÃ¨s $DURATION sec." >> "$LOG_FILE"
        ) &
    fi
    ;;
  delete)
    iptables -D INPUT -s "$IP" -j DROP
    echo "$DATE_NOW ðŸ—‘ï¸ IP $IP dÃ©bloquÃ©e manuellement." >> "$LOG_FILE"
    ;;
  *)
    echo "$DATE_NOW âš ï¸ Action inconnue ($ACTION), sortie." >> "$LOG_FILE"
    exit 1
    ;;
esac

exit 0
